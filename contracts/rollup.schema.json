{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Rollup",
  "type": "object",
  "additionalProperties": false,
  "required": ["title", "summary", "evidence", "confidence"],
  "properties": {
    "title": { "type": "string" },
    "summary": { "type": "string" },
    "evidence": {
      "type": "array",
      "items": { "type": "string" }
    },
    "confidence": { "type": "string", "enum": ["low", "medium", "high"] }
  }
}
